{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
      "strict": true,
      "useUnknownInCatchVariables": false,
      "baseUrl": "./",
      "paths": {
          "@src/*": [ "./src/*"],
          "@components/*": [ "./src/components/*"],
          "@screens/*": [ "./src/screens/*"],
          "@assets/*": [ "./src/assets/*"],
          "@hooks/*": [ "./src/hooks/*"],
          "@utils/*": [ "./src/utils/*"],
          "@theme/*": ["./src/theme/*"],
          "@config/*": ["./src/config/*"],
          "@routes/*": ["./src/routes/*"],
          "@services/*": ["./src/services/*"],
      }
  },
}